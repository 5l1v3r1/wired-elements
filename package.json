{
  "name": "wired-elements-repo",
  "version": "0.6.4",
  "description": "Collection of hand-drawn sketchy web components",
  "main": "wired-elements.js",
  "private": true,
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "bootstrap": "npm install && npm run hoist",
    "hoist": "lerna bootstrap --hoist",
